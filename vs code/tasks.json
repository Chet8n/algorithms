{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C++",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "clang++ -g -fsanitize=address -fsanitize=undefined -O3 -std=c++20 -DLOCAL ${relativeFile} -o ${fileBasenameNoExtension} && timeout 10s ./${fileBasenameNoExtension} < input.in > output.in"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Task to build and run C++ with input/output redirection"
    },
    {
      "label": "Build and Run C++ using g++",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++-15 -g -O3 -std=c++20 -DLOCAL ${relativeFile} -o ${fileBasenameNoExtension} && timeout 10s ./${fileBasenameNoExtension} < input.in > output.in"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Task to build and run C++ with input/output redirection"
    },
    {
      "label": "Interactively Build and Run C++",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++ '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' && open -a Terminal.app '${fileDirname}/${fileBasenameNoExtension}'"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Task to build and run C++ with Terminal.app"
    },
    {
      "label": "Build and Run Python",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "python3 ${file} < input.in > output.in"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/opt/homebrew/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    }
  ]
}
